<com.ian.widget.MenuItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_menu"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#da3fd6">


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right">

      <TextView
          android:id="@+id/item_menu_item_01"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="#FF0000"
          android:gravity="center"
          android:text="删除"
          android:textColor="@android:color/white"
          android:visibility="visible" />

      <TextView
          android:id="@+id/item_menu_item_03"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="#7fff00"
          android:gravity="center"
          android:text="关注"
          android:textColor="@android:color/white"
          android:visibility="visible" />

  </LinearLayout>


    <TextView
        android:id="@+id/item_menu_item_02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:background="#FF23fd"
        android:gravity="center"
        android:text="增加"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#F3FE"
            android:gravity="center"
            android:text="item:"
            android:textSize="18sp" />
    </FrameLayout>

</com.ian.widget.MenuItemLayout>